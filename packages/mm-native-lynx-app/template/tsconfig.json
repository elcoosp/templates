{
  "extends": ["@tsconfig/strictest", "@tsconfig/node20"],
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "exclude": ["dist"],
  "include": ["src"]
}
