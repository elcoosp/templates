{
  "extends": ["@tsconfig/strictest", "@tsconfig/node20"],
  "compilerOptions": {
    "jsx": "preserve",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/"],
  "paths": {
    "@assets/*": ["./assets/*"]
  }
}
